{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "noEmit": true,
    "jsx": "preserve",
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
